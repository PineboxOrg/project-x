{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "lib": ["es2017"],
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@sebasg/stryker": ["./packages/stryker"]
    }
  },
  "exclude": ["tmp", "build"]
}
